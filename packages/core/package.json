{
  "name": "react-native-zephyr",
  "author": "Formidable",
  "description": "TailwindCSS-inspired styling library for React Native",
  "keywords": [
    "react",
    "react-native",
    "styling",
    "tailwind-css"
  ],
  "version": "0.1.7",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FormidableLabs/react-native-zephyr"
  },
  "homepage": "https://react-native-zephyr.vercel.app",
  "exports": {
    ".": [
      {
        "imports": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./dist/index.js"
    ]
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p ./tsconfig.build.json",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "cp ../../README.md ./README.md && cp ../../LICENSE ./LICENSE && yarn test && yarn build",
    "preversion": "yarn run test"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-native": ">=0.66.4"
  }
}
